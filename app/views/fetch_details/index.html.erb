<div class="row">
  <div class="col-lg-12">
    <%= form_tag "/fetch_details/fetch_user_data", :method => "POST",:class=>"form-inline",:remote => true do %>
        <div class="form-group">
          <label for="exampleInputusername">UserName</label>
          <%= text_field_tag :username, nil, placeholder: 'Enter Username ...' ,:class=>"form-control"%>
        </div>
        <% @sources.each do |source| %>
            <label class="checkbox-inline">
              <%= check_box_tag 'source_ids[]', source -%>
              <%= source %>
            </label>
        <% end %>
        <%= submit_tag "Fetch Detail",:class => "btn btn-primary"%>
        <button type="reset" class="btn btn-warning">Reset</button>
    <% end %>
  </div>
</div>


<div class="clear"></div>
<br/>
<div class="container" id="user_list">
  <div class="col-lg-12">
    <div class="row">
      <h3>User Details </h3>
    </div>
  </div>
  <div class="row text-center">
    <div class="col-md-12">
      <div class="col-md-4 col-sm-6 hero-feature">
        <div class="thumbnail">
          <div class="caption">
            <h3>GitHub</h3>
            <div id="github"></div>
          </div>
        </div>
      </div>

      <div class="col-md-4 col-sm-6 hero-feature">
        <div class="thumbnail">
          <div class="caption">
            <h3>Twitter</h3>
            <div id="twitter"></div>
          </div>
        </div>
      </div>

      <div class="col-md-4 col-sm-6 hero-feature">
        <div class="thumbnail">
          <div class="caption">
            <h3>RubyGems</h3>
            <div id="ruby_gems"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>